#!/bin/bash
SOURCE_FILE="data.json"

# Extract required data from JSON
NAME=$(jq -r '.name' "$SOURCE_FILE")
TYPE=$(jq -r '.types[0].type.name' "$SOURCE_FILE")
HEIGHT=$(jq -r '.height' "$SOURCE_FILE")
WEIGHT=$(jq -r '.weight' "$SOURCE_FILE")

# Use sed to capitalize name and type
name=$(echo "$NAME" | sed 's/^\(.\)/\U\1/')
type=$(echo "$TYPE" | sed 's/^\(.\)/\U\1/')

# Format height and weight to appropriate units
formatted_height=$(echo "$HEIGHT" | awk '{print $1/10}')
formatted_weight=$(echo "$WEIGHT" | awk '{print $1/10}')

echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
